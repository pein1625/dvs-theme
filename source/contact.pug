        form.card.card-body
          .form-row
            .col-xl-9.col-lg-8.offset-xl-3.offset-lg-4.text-center
              h2.text-center.text-20.font-weight-bold.mb-10 THÔNG TIN
          .form-row.mb-3
            label.col-form-label.col-xl-3.col-lg-4 Họ và tên
              span.text-danger *
            .col-xl-9.col-lg-8
              input.form-control(type="text")
          .form-row.mb-3
            label.col-form-label.col-xl-3.col-lg-4 Số điện thoại
              span.text-danger *
            .col-xl-9.col-lg-8
              input.form-control(type="text")
          .form-row.mb-3
            label.col-form-label.col-xl-3.col-lg-4 Email
              span.text-danger *
            .col-xl-9.col-lg-8
              input.form-control(type="text")
          .form-row.mb-3
            label.col-form-label.col-xl-3.col-lg-4 Tiêu đề
            .col-xl-9.col-lg-8
              input.form-control(type="text")
          .form-row.mb-3
            label.col-form-label.col-xl-3.col-lg-4 Nội dung
              span.text-danger *
            .col-xl-9.col-lg-8
              textarea.form-control(rows="4")
          .form-row
            .col-xl-9.col-lg-8.offset-xl-3.offset-lg-4.text-center
              button.btn.btn-dark.font-weight-bold(type="submit") LIÊN HỆ NGAY
